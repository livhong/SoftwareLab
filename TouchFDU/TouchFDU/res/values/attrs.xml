<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="MaterialTabHost">

        <!-- Custom attributes -->
        <attr name="hasIcons" format="boolean" />
        <attr name="primaryColor" format="color" />
        <attr name="accentColor" format="color" />
        <attr name="iconColor" format="color" />
        <attr name="textColor" format="color"  />
        <attr name="av_color" format="color"/>
        <attr name="av_action" format="enum">
            <enum name="drawer" value="0"/>
            <enum name="back" value="1"/>
            <enum name="close" value="2"/>
            <enum name="plus" value="3"/>
        </attr>
    </declare-styleable>
    
    <declare-styleable name="PullRefreshLayout">
        <attr name="type" format="enum">
            <enum name="material" value="0" />
            <enum name="circles" value="1" />
            <enum name="water_drop" value="2" />
            <enum name="ring" value="3" />
        </attr>
        <attr name="colors" format="reference"/>
    </declare-styleable>
    
</resources>
